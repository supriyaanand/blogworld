<h2>The journey that has been!</h2>

<table class="table-bordered">
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>

  <%= paginate @articles %>
  <% @articles.each do |article| %>
      <tr>
        <td><button class="btn btn-link" data-toggle="modal"
                    data-target="#article-<%= article.id %>"><%= article.title %></button></td>
        <td><%= link_to 'Comments', article_path(article), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit Post', edit_article_path(article), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Delete Post', article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
      </tr>
    <div class="modal fade" id="article-<%= article.id %>" tabindex="-1"
         role="dialog" aria-labelledby="article-<%= article.id %>-label"
         aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="article-<%= article.id %>-label"> <%= article.title %></h3>
          </div>
          <div class="modal-body">
            <%= article.text %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</table>
