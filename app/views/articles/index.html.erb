<h1>Listing articles</h1>

<table class="table-bordered">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <%= paginate @articles %>
  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Delete', article_path(article),
                        method: :delete,
                        data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-xs' %></td>
      </tr>
  <% end %>
</table>

<%= link_to 'New Article', new_article_path %>